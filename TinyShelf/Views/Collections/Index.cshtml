@using TinyShelf.Models

<h2>Your Collections</h2>

@if (@Model.Count == 0)
{
  <h3>No collections have been added yet!</h3>
} 
else
{
  
  <ul>
    @foreach (Collection collection in Model)
    {
      <li  class="column1-collections">@Html.ActionLink($"{collection.Name}", "Details", new { id = collection.CollectionId })</li>
    }
  </ul>
  
}
</div>

