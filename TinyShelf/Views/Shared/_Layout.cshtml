<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TinyShelf</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TinyShelf.styles.css" asp-append-version="true" />
</head>
<body>

<div class="container">
    <div>
        <div class="box">
            <div class="column1">
                <div class="column1-header">TinyShelf</div>
                <hr />
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="column1-newcollection">New Collection</div>
                    <div class="column1-collections">Collection</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                    <div class="column1-collections">Collection</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                    <div class="column1-collections">Collection</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                    <div class="column1-items">items</div>
                }
                else
                {
                    <div>eat the rich!</div>
                }
                </div>

                <div class="column2">
                    <div class="column2-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @using (Html.BeginForm("LogOff", "Account"))
                            {
                            @Html.ActionLink("Home","Index","Home", null, new { @class= "login-button"} )
                            <input type="submit" class="login-button" value="Log Out"/>
                            }
                        }
                        else
                        {
                            @Html.ActionLink("Home","Index","Home", null, new { @class= "login-button"} )
                            @Html.ActionLink("Log In","Login","Account", null, new { @class= "login-button"} )
                        }
                    </div>
                    <div class="column2-main"> 
                        @RenderBody()
                    </div> 
            </div>
        </div>
    </div>           
</div>

<footer class="footer text-muted">
    <div class="footer-container">
        &copy; 2023 - TinyShelf - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

</body>
</html>
