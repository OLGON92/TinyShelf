@{
    ViewData["Title"] = "Home Page";
}

@using TinyShelf.ViewModels
@model RegisterViewModel
<br>
@if(!ViewData.ModelState.IsValid)
{
  @Html.ValidationSummary("Please fix the following error(s) and resubmit the form:")
  @Html.ActionLink("Register", "Register", "Account", null, new { @class="btn btn-outline-secondary" })
  <br>
}
else
{
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    @Html.LabelFor(user => user.UserName, new { @class = "control-label" })<br>
    @Html.TextBoxFor(user => user.UserName, new { @class = "allforms", @required = "required" })
    <br>
    @Html.LabelFor(user => user.Email, new { @class = "control-label" })<br>
    @Html.TextBoxFor(user => user.Email, new { @class = "allforms", @required = "required" })
    <br>
    @Html.LabelFor(user => user.Password, new { @class = "control-label" })<br>
    @Html.PasswordFor(user => user.Password, new { @class = "allforms", @required = "required" })
    <br>
    @Html.LabelFor(user => user.ConfirmPassword, new { @class = "control-label" })<br>
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "allforms", @required = "required" })
    <br>
    <input type="submit" class="login-button" value="Register" required />
  }
  <br>
  <br>
}