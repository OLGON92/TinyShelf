@{
    ViewData["Title"] = "Items";
}

@using TinyShelf.Models

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Item item in Model)
    {
      <li>@Html.ActionLink($"{item.Title}", "Details", new { id = item.ItemId })</li>
    }
  </ul>
}

<button>@Html.ActionLink("Add a new item", "Create")</button>

