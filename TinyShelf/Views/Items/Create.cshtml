@{
    ViewData["Title"] = "Create Item";
}

@model TinyShelf.Models.Item

@using (Html.BeginForm())
{
  @Html.Label("Title: ")<br>
  @Html.TextBoxFor(model => model.Title, new { @class = "allforms", @required = "required" })<br>

  @Html.Label("Details:")<br>
  @Html.TextAreaFor(model => model.Details, new { @class = "detailsforms", @required = "required", @rows = "5", @cols = "50" })<br><br>
  <input type="submit" value="Add a new Item" class="main-1-button">
}
